<Window x:Class="HashtableApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashtableApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add" HorizontalAlignment="Left" Margin="191,244,0,0" VerticalAlignment="Top" Width="121" Height="53" FontSize="20" Click="Add_Button_Click"/>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Height="40" Margin="191,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="421" FontSize="24" TextAlignment="Center" Text="Value"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="342,244,0,0" VerticalAlignment="Top" Width="121" Height="53" FontSize="20" Click="Remove_Button_Click"/>
        <Button Content="Show All" HorizontalAlignment="Left" Margin="491,244,0,0" VerticalAlignment="Top" Width="121" Height="53" FontSize="20" Click="Show_Button_Click"/>
        <TextBox x:Name="txtKey" HorizontalAlignment="Left" Height="40" Margin="191,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="421" FontSize="24" TextAlignment="Center" Text="key"/>

    </Grid>
</Window>
